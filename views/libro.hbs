{{> head}}
{{> navbar}}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">Registro de Libros</h5>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th scope="col">Autor</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each libros}}

                            <tr>
                                <th scope="row">{{ i }}</th>
                                <td>{{this.titulo}}</td>
                                <td>{{this.autor}}</td>
                            </tr>
                            {{/each}}


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Registrar Libro</h5>
                    <form method="post" action="/libro">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Titulo</label>
                            <input type="text" class="form-control form-control-sm" name="titulo" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Autor</label>
                            <input type="text" class="form-control form-control-sm" name="autor">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            

        </div>
    </div>


</div>

{{> footer }}