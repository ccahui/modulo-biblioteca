                            <label for="exampleInputPassword1">Titulo</label>
                            <input type="text" value="{{libro.titulo}}" class="form-control form-control-sm" name="titulo" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Autor</label>
                            <input type="text" value="{{libro.autor}}" class="form-control form-control-sm" name="autor">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Editorial</label>
                            <input type="text" value="{{libro.editorial}}" class="form-control form-control-sm" name="editorial">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">AÃ±o</label>
                            <input type="text" value="{{libro.anio}}" class="form-control form-control-sm" name="anio">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Subir Documento PDF</h5>
                    <form method="post" action="/upload/libro" enctype="multipart/form-data">

                            
                            <input hidden="true" name="id" value="{{libro._id}}">

                        <div class="form-group">
                            <label for="exampleFormControlFile1">Archivo a Subir</label>
                            <input type="file" class="form-control-file" name="archivo" id="exampleFormControlFile1">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


